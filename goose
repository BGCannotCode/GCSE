            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
        }

        .password-form {
            background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent black background */
            padding: 20px;
            border-radius: 8px;
            animation: fadeIn 1s ease-out forwards; /* Animation */
        }

        .password-form h1 {
            font-size: 24px;
            margin-bottom: 20px;
            animation: slideInLeft 1s ease-out forwards; /* Animation */
        }

        .password-form label {
            display: block;
            margin-bottom: 10px;
            animation: slideInRight 1s ease-out forwards; /* Animation */
        }

        .password-form input[type="password"] {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            animation: slideInLeft 1s ease-out forwards; /* Animation */
        }

        .password-form button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #4CAF50; /* Green button */
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            animation: slideInRight 1s ease-out forwards; /* Animation */
        }

        .password-form button:hover {
            background-color: #45a049; /* Darker green on hover */
        }

        .announcement {
            position: fixed;
            top: 10px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #ffcc00; /* Yellow background for announcement */
            padding: 10px 20px;
            font-size: 18px;
            color: #333333; /* Dark text color */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 1000; /* Ensure it's above other content */
            display: none; /* Initially hidden */
            animation: slideInDown 1s ease-out forwards; /* Animation */
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes slideInLeft {
            from {
                transform: translateX(-100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
