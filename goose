<body>
    <div class="password-form">
        <h1>❌ Protected ❌</h1>
        <form id="passwordForm">
            <label for="password">Enter the password to proceed:</label>
            <input type="password" id="password" name="password" required>
            <button type="submit">Enter</button>
        </form>
    </div>

    <div class="announcement" id="announcement">
        <p id="announcementText"></p>
    </div>

    <script>
        // Dynamic Events
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('.password-form').classList.add('animated');
            document.getElementById('password').focus();
        });

        document.getElementById('passwordForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const password = document.getElementById('password').value;
            if (password === 'teolovesmoni') {
                // Redirect to the original page upon correct password
                window.location.href = 'https://teopoulter.github.io/teo/mongoose';
            } else {
                // Display an on-screen announcement for incorrect password
                const announcement = document.getElementById('announcement');
                const announcementText = document.getElementById('announcementText');
                announcementText.textContent = 'Incorrect password. Please try again.';
                announcement.style.display = 'block';

                // Clear the announcement after 3 seconds
                setTimeout(function() {
                    announcement.style.display = 'none';
                }, 3000);
            }
        });
    </script>
</body>
</html>
